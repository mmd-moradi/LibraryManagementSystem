<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.library.controller.IssueBookController" 
      spacing="15" stylesheets="@../css/styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    
    <Text styleClass="form-title" text="Emprestar Livro" />
    
    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
        </columnConstraints>
        
        <Label text="ID do Livro:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
            <TextField fx:id="bookIdField" HBox.hgrow="ALWAYS" />
            <Button text="Buscar" onAction="#handleBookSearch" />
        </HBox>
        
        <Label text="Título do Livro:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="bookTitleField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Autor do Livro:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="bookAuthorField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Status do Livro:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="bookStatusField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        
        <Separator GridPane.columnSpan="2" GridPane.rowIndex="4" />
        
        <Label text="ID do Estudante:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="5">
            <TextField fx:id="studentIdField" HBox.hgrow="ALWAYS" />
            <Button text="Buscar" onAction="#handleStudentSearch" />
        </HBox>
        
        <Label text="Nome do Estudante:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <TextField fx:id="studentNameField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        
        <Label text="Livros Emprestados:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <TextField fx:id="borrowedBooksField" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        
        <Separator GridPane.columnSpan="2" GridPane.rowIndex="8" />
        
        <Label text="Data de Empréstimo:" GridPane.columnIndex="0" GridPane.rowIndex="9" />
        <DatePicker fx:id="issueDatePicker" disable="true" GridPane.columnIndex="1" GridPane.rowIndex="9" />
        
        <Label text="Data de Devolução:" GridPane.columnIndex="0" GridPane.rowIndex="10" />
        <DatePicker fx:id="dueDatePicker" GridPane.columnIndex="1" GridPane.rowIndex="10" />
    </GridPane>
    
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Emprestar Livro" fx:id="issueButton" onAction="#handleIssue" styleClass="primary-button" />
        <Button text="Cancelar" fx:id="cancelButton" onAction="#handleCancel" />
    </HBox>
    
    <Label fx:id="messageLabel" styleClass="message-text" alignment="CENTER" />
</VBox>