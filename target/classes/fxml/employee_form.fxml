<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.library.controller.EmployeeFormController" 
      spacing="15" stylesheets="@../css/styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    
    <Text styleClass="form-title" text="Adicionar Funcionário" fx:id="formTitleText" />
    
    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
        </columnConstraints>
        
        <Label text="ID do Usuário:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="userIdField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="ID do Funcionário:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="employeeIdField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="Email:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="emailField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        
        <Label text="Telefone:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="phoneField" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        
        <Label text="Endereço:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="addressField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        
        <Label text="Cargo:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <ComboBox fx:id="positionComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6" />
        
        <Label text="Salário:" GridPane.columnIndex="0" GridPane.rowIndex="7" />
        <TextField fx:id="salaryField" GridPane.columnIndex="1" GridPane.rowIndex="7" />
        
        <Label text="Data de Contratação:" GridPane.columnIndex="0" GridPane.rowIndex="8" />
        <DatePicker fx:id="dateHiredPicker" GridPane.columnIndex="1" GridPane.rowIndex="8" />
    </GridPane>
    
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Salvar" fx:id="saveButton" onAction="#handleSave" styleClass="primary-button" />
        <Button text="Cancelar" fx:id="cancelButton" onAction="#handleCancel" />
    </HBox>
    
    <Label fx:id="messageLabel" styleClass="message-text" alignment="CENTER" />
</VBox>