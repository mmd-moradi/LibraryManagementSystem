<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="com.library.controller.BookFormController" 
      spacing="15" stylesheets="@../css/styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    
    <Text styleClass="form-title" text="Adicionar Novo Livro" fx:id="formTitleText" />
    
    <GridPane hgap="15" vgap="15">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100" prefWidth="150" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="200" prefWidth="300" />
        </columnConstraints>
        
        <Label text="ID do Livro:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="bookIdField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="Título:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="titleField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
        
        <Label text="Autor:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="authorField" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        
        <Label text="ISBN:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="isbnField" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        
        <Label text="Categoria:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <ComboBox fx:id="categoryComboBox" GridPane.columnIndex="1" GridPane.rowIndex="4" />
        
        <Label text="Ano de Publicação:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <TextField fx:id="yearField" GridPane.columnIndex="1" GridPane.rowIndex="5" />
        
        <Label text="Status:" GridPane.columnIndex="0" GridPane.rowIndex="6" />
        <ComboBox fx:id="statusComboBox" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    </GridPane>
    
    <HBox spacing="15" alignment="CENTER_RIGHT">
        <Button text="Salvar" fx:id="saveButton" onAction="#handleSave" styleClass="primary-button" />
        <Button text="Cancelar" fx:id="cancelButton" onAction="#handleCancel" />
    </HBox>
    
    <Label fx:id="messageLabel" styleClass="message-text" alignment="CENTER" />
</VBox>