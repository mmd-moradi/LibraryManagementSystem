<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.BooksViewController" spacing="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Search:" />
        <TextField fx:id="searchField" promptText="Enter title, author, or ISBN" HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="filterComboBox" promptText="Filter by" />
        <Button text="Search" onAction="#handleSearch" />
        <Button text="Clear" onAction="#handleClear" />
    </HBox>
    
    <TableView fx:id="booksTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" />
            <TableColumn text="Title" fx:id="titleColumn" />
            <TableColumn text="Author" fx:id="authorColumn" />
            <TableColumn text="ISBN" fx:id="isbnColumn" />
            <TableColumn text="Category" fx:id="categoryColumn" />
            <TableColumn text="Publication Year" fx:id="yearColumn" />
            <TableColumn text="Status" fx:id="statusColumn" />
        </columns>
        <placeholder>
            <Label text="No books available" />
        </placeholder>
    </TableView>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Add Book" onAction="#handleAddBook" />
        <Button text="Edit Book" onAction="#handleEditBook" />
        <Button text="Delete Book" onAction="#handleDeleteBook" />
        <Button text="Issue Book" onAction="#handleIssueBook" />
        <Button text="Return Book" onAction="#handleReturnBook" />
    </HBox>
</VBox>