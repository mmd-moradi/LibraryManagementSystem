<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.library.controller.BooksViewController" spacing="10" stylesheets="@../css/styles.css">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20" />
    </padding>
    
    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Pesquisar:" />
        <TextField fx:id="searchField" promptText="Digite título, autor ou ISBN" HBox.hgrow="ALWAYS" />
        <ComboBox fx:id="filterComboBox" promptText="Filtrar por" />
        <Button text="Pesquisar" onAction="#handleSearch" />
        <Button text="Limpar" onAction="#handleClear" />
    </HBox>
    
    <TableView fx:id="booksTable" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn text="ID" fx:id="idColumn" />
            <TableColumn text="Título" fx:id="titleColumn" />
            <TableColumn text="Autor" fx:id="authorColumn" />
            <TableColumn text="ISBN" fx:id="isbnColumn" />
            <TableColumn text="Categoria" fx:id="categoryColumn" />
            <TableColumn text="Ano de Publicação" fx:id="yearColumn" />
            <TableColumn text="Status" fx:id="statusColumn" />
        </columns>
        <placeholder>
            <Label text="Nenhum livro disponível" />
        </placeholder>
    </TableView>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Adicionar Livro" onAction="#handleAddBook" />
        <Button text="Editar Livro" onAction="#handleEditBook" />
        <Button text="Excluir Livro" onAction="#handleDeleteBook" />
        <Button text="Emprestar Livro" onAction="#handleIssueBook" />
        <Button text="Devolver Livro" onAction="#handleReturnBook" />
    </HBox>
</VBox>